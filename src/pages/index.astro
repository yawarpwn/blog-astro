---
import Layout from '../layouts/Layout.astro'
import { getPosts } from '../services/getPosts'

const posts = await getPosts()
---

<Layout title="Blog">
  <h1>Johneyder Blog</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/posts/${post.slug}/`}>
            <h2>{post.title}</h2>
          </a>
          <time>{post.date}</time>
          <p>{post.description}</p>
        </li>
      ))
    }
  </ul>
</Layout>
<style>
  h1 {
    color: orange;
  }
</style>
